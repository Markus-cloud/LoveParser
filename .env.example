# Server Configuration
API_PORT=4000

# Telegram API Configuration (REQUIRED for auth to work)
# Get these from https://my.telegram.org/apps
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here

# Telegram Bot Token (REQUIRED for avatar downloads via Bot API)
# Get this from @BotFather on Telegram
# Without this token, user avatars cannot be downloaded
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Optional: API URL override for frontend (usually not needed)
# VITE_API_URL=

# Node environment
NODE_ENV=development